@model ChatUp.Models.GroupeModel

@{
    ViewBag.Title = "Creer un groupe";
}

@section Menu
{
    @if (Request.IsAuthenticated)
    {
        <li><a href="/"><i class="material-icons">perm_identity</i></a></li>
        <li><a href="@Url.Action("Details", "ProfilModels")"><i class="material-icons">contacts</i></a></li>
        <li class="active"><a href="@Url.Action("Index","Discussion")"><i class="material-icons">question_answer</i></a></li>
        <li><a href="@Url.Action("Index","Parameter")"><i class="material-icons">settings</i></a></li>
        <li><a href=@Url.Action("Deconnexion","Utilisateur")><i class="material-icons">power_settings_new</i></a></li>
    }
    else
    {
        <li class="active"><a href="/"><i class="material-icons">perm_identity</i></a></li>
    }
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        @Html.Action("Lister")
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col s12 m8 l10">
            <div class="card">
                <div class="card-content">
                    <div class="center-align">
                        <figure>
                            <img src="~/Content/pictures/wallhaven-316401.jpg" class="imgGroupe">
                            <figcaption><b>Nouveau groupe</b></figcaption>
                        </figure>
                    </div>

                    <table>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.NomGroupe, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.NomGroupe, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NomGroupe, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.InvitationAutorisee)
                                    @Html.CheckBoxFor(model => model.InvitationAutorisee)
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="card-panel center-align">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Créer" class="btn btn-default" />
                        <button type="button" value="Retour" class="btn btn-default">
                            @Html.ActionLink("Retour", "Details", new { @class = "buttonLink" })
                        </button>
                    </div>
                </div>

                <div class="card">
                    <div class="card-title center-align">
                        <span class="center-align">
                            Ajouter des membres au groupe
                        </span>
                    </div>

                    <div class="card-panel">
                        <span class="card-title scrollable">
                            @*@Html.Action("ListerMembres", "Discussion", new { id = Model.IdGroupe })*@
                        </span>
                    </div>
                </div>

            </div>
        </div>
    </div>

}
