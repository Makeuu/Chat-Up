@model ChatUp.ViewModels.DiscussionViewModel

<table class="table scrollable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Message.DateEnvoi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Message.Message)
        </th>
        <th></th>
    </tr>

    @foreach (var msg in Model.Groupe.ListeMessages)
    {
        <tr class="me">
            <td>
                @Html.DisplayFor(modelItem => msg.DateEnvoi)
            </td>
            @if (msg.AuteurContenu.Email == HttpContext.Current.User.Identity.Name)
            {
                <td class="you">
                    @msg.AuteurContenuId
                    @Html.DisplayFor(modelItem => msg.Message)
                </td>
            }
            else
            {
                <td class="me">
                    @msg.AuteurContenuId
                    @Html.DisplayFor(modelItem => msg.Message)
                </td>
            }
        </tr>

    }
</table>
