@model ChatUp.Models.GroupeModel

<table>
    <tbody>
        @foreach (var msg in Model.ListeMessages)
        {
            string date = msg.DateEnvoi.ToShortTimeString();

            if (msg.AuteurContenu.Email == HttpContext.Current.User.Identity.Name)
            {
                <tr class="right-align">
                    <td></td>
                    <td class="right-align">                        
                    </td>
                    <td class="bubble me z-depth-1">
                        <div>
                            <i class="material-icons">person_pin</i>
                            @Html.DisplayFor(modelItem => msg.Message)
                        </div>
                    </td>
                </tr>
            }
            else
            {
                <tr class="left-align">

                    <td class="right-align"  id="pseudoMembre">
                        <div class="chip center-align">
                            @msg.AuteurContenu.Profil.Prenom
                            @*<span>@date</span>*@
                        </div>
                    </td>
                    <td class="bubble you z-depth-1 left-align">
                        <div>
                            <i class="material-icons">person_pin</i>
                            @Html.DisplayFor(modelItem => msg.Message)
                        </div>
                    </td>
                    <td></td>
                </tr>
            }
        }
    </tbody>
</table>