@model ChatUp.Models.SessionModel

@{
    ViewBag.Title = "Accueil";
}

@section Menu
{
    @if (Request.IsAuthenticated)
    {
        <li class="active"><a href="/"><i class="material-icons">perm_identity</i></a></li>
        <li><a href="@Url.Action("Details", "ProfilModels")"><i class="material-icons">contacts</i></a></li>
        <li><a href="@Url.Action("Index","Discussion")"><i class="material-icons">question_answer</i></a></li>
        <li><a href="@Url.Action("Index","Parameter")"><i class="material-icons">settings</i></a></li>
        <li><a href=@Url.Action("Deconnexion","Utilisateur")><i class="material-icons">power_settings_new</i></a></li>
    }
    else
    {
        <li class="active"><a href="/"><i class="material-icons">perm_identity</i></a></li>
    }
}

@if (Request.IsAuthenticated){
    <div>
        <div class="container center-align">
            <div class="card">
                <div class="card-title">
                    <h3>Bienvenu(e) sur Chat-Up </h3>
                    <p>Service de messagerie instantannée</p>
                </div>
                <div class="card-content">
                    <p>Cette application a été réalisée dans le cadre d'un projet d'étude en M1 Miage par Apprentissage</p>
                    <span>L'objectif de ce projet était de réaliser une application de discussion instantannée de type What's App, 
                            en passant par nos adresses mails plutôt que par nos numéros de téléphones.</span>
                    <p>Ci-dessous quelques captures d'écrans des possibilités offertes par l'application</p>
                </div>
                <div class="card-content center-align container">
                    <div class="slider">
                        <ul class="slides">
                            <li>
                                <img src="~/Content/pictures/Discussion.PNG"> 
                            </li>
                            <li>
                                <img src="~/Content/pictures/editergruope.PNG">
                            </li>
                            <li>
                                <img src="~/Content/pictures/inviter.PNG">
                            </li>
                            <li>
                                <img src="~/Content/pictures/accueil.PNG">
                            </li>
                            <li>
                                <img src="~/Content/pictures/ajouterAmi.PNG">
                            </li>
                            <li>
                                <img src="~/Content/pictures/connexion.PNG">
                            </li>
                            <li>
                                <img src="~/Content/pictures/profil.PNG">
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h1 class="header center red-text">Accueil</h1>
    <div class="center">
        <h5 class="header col s12 light">Page d'accueil de l'application de messagerie instantannées CHAT - UP</h5>
    </div>
    <div class="center">
        @Html.ActionLink("S'inscrire", "Inscrire", "Utilisateur", new { area = "" }, new { @class = "btn-large waves-effect waves-light red", @id = "download-button" })
        @Html.ActionLink("Se connecter", "Login", "Utilisateur", new { area = "" }, new { @class = "btn-large waves-effect waves-light red", @id = "download-button" })
    </div>
}

@Scripts.Render("~/Scripts/chatup/carroussel.js")